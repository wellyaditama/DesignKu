<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.admin.BookDesignActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/view_admin_service_gradient"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/primary3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_baseline_close_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_main_banner_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:minHeight="100dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_close">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_add_design_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Booking Jasa Design"
                    android:textColor="@color/fontColor"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_main_logo"
                    app:layout_constraintStart_toEndOf="@+id/iv_main_logo"
                    app:layout_constraintTop_toTopOf="@+id/iv_main_logo" />

                <TextView
                    android:id="@+id/tv_nama_design"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Design Undangan Pernikahan"
                    android:textColor="@color/fontColor"
                    android:textSize="16sp"
                    android:layout_marginTop="24dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/iv_main_logo"
                    app:layout_constraintTop_toBottomOf="@+id/iv_main_logo" />

                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/iv_price"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_monetization_on_24"
                    android:tint="@color/fontColor"
                    app:layout_constraintStart_toStartOf="@+id/iv_main_logo"
                    app:layout_constraintTop_toBottomOf="@+id/tv_nama_design"
                    android:layout_marginTop="8dp"
                    app:tint="@color/textcolor" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:text="Rp.50.000,00"
                    android:textFontWeight="600"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_price"
                    app:layout_constraintStart_toEndOf="@id/iv_price"
                    app:layout_constraintTop_toTopOf="@id/iv_price" />

                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/iv_time"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_date_range_24"
                    android:tint="@color/fontColor"
                    android:layout_marginStart="24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_price"
                    app:layout_constraintStart_toEndOf="@+id/tv_price"
                    app:layout_constraintTop_toTopOf="@+id/iv_price" />

                <TextView
                    android:id="@+id/tv_lama_pengerjaan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:text="5 hari"
                    android:textFontWeight="600"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_price"
                    app:layout_constraintStart_toEndOf="@+id/iv_time"
                    app:layout_constraintTop_toTopOf="@id/iv_price" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed pharetra quam non hendrerit pharetra. Praesent dui mi, elementum ac scelerisque a, volutpat et leo. Sed maximus eleifend velit feugiat euismod. Maecenas mattis pellentesque quam sit amet blandit. Ut ornare suscipit urna quis aliquet. Sed viverra ut est sed pellentesque. Donec ornare felis quis nibh rhoncus, a blandit massa ultricies. Aenean erat sem, lobortis at enim in, malesuada ultrices purus. Ut blandit tristique nunc."
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_price"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/iv_main_logo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="28dp"
                    android:src="@drawable/ic_main_appicon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_add_design_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:minHeight="100dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="80dp"
            app:layout_constraintTop_toBottomOf="@id/cv_main_banner_menu">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tf_nama_jasa"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="16dp"
                    android:hint="Nama Pemesan"
                    app:boxBackgroundColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:startIconTint="@color/fontColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ti_nama_jasa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tf_email_jasa"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="16dp"
                    android:hint="Email Pemesan"
                    app:boxBackgroundColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tf_nama_jasa"
                    app:layout_constraintStart_toStartOf="parent"
                    app:startIconTint="@color/fontColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ti_email_jasa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tf_nohp_jasa"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="16dp"
                    android:hint="No HP Pemesan"
                    app:boxBackgroundColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tf_email_jasa"
                    app:layout_constraintStart_toStartOf="parent"
                    app:startIconTint="@color/fontColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ti_no_hp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tf_keterangan_jasa"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="16dp"
                    android:hint="Keterangan Tambahan"
                    app:boxBackgroundColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tf_nohp_jasa"
                    app:layout_constraintStart_toStartOf="parent"
                    app:startIconTint="@color/fontColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ti_keterangan_jasa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minLines="4"/>

                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tf_keterangan_jasa"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="24dp"
                    android:text="BOOKING"/>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>